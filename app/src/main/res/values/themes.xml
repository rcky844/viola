<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- DMN: Status bar icons color cannot be modified until Lollipop -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/black</item>

        <!-- SUW: AlertDialog -->
        <item name="alertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog</item>
        <item name="dialogCornerRadius">28dp</item>

        <!-- View style -->
        <item name="linearProgressIndicatorStyle">@style/Widget.App.LinearProgressIndicator</item>
    </style>

    <!-- Collapsing toolbar style -->
    <style name="Theme.App.Settings.ToolbarCollapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
    </style>
    Widget.App.LinearProgressIndicator
    <style name="Theme.App.Settings.ToolbarExpanded" parent="Theme.App.Settings.ToolbarCollapsed">
        <item name="android:textSize">36sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>