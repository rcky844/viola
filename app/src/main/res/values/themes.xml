<resources xmlns:tools="http://schemas.android.com/tools" tools:targetApi="tiramisu">
    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- AlertDialog Theme -->
        <item name="alertDialogTheme">@style/ThemeOverlay.Material3.MaterialAlertDialog</item>
        <item name="dialogCornerRadius">28dp</item>

        <!-- Status bar & Navigation bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Snackbar -->
        <item name="snackbarStyle">@style/Theme.App.SnackBarStyle</item>
        <item name="snackbarTextViewStyle">@style/Theme.App.SnackBarStyle.TextView</item>
        <item name="snackbarButtonStyle">@style/Theme.App.SnackBarStyle.Button</item>
    </style>

    <style name="Theme.App.TranslucentStatus" parent="Theme.App">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Collapsing toolbar style -->
    <style name="Theme.App.Settings.ToolbarCollapsed" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.App.Settings.ToolbarExpanded" parent="Theme.App.Settings.ToolbarCollapsed">
        <item name="android:textSize">36sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
</resources>